
<%= render 'shared/errors', obj: @blog %>

<%= form_with(model: blog, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control", rows: 20 %>
  </div>

  <div class="form-group">
    <%= form.label :topic_id %>
    <%= form.collection_select :topic_id, Topic.all, :id, :title,
                               include_blank: true,
                               class: "form-control"
    %>
  </div>

  <div class="form-group">
    <%= form.radio_button :status, 'draft' %>
    <%= form.label :status, 'draft', class: "mr-3" %>

    <%= form.radio_button :status, 'published' %>
    <%= form.label :status, 'published' %>

  </div>

  <div class="form-group">
    <%= form.submit "Enter", class: "btn btn-primary" %>
  </div>
<% end %>
