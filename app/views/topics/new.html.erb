
<%= render 'shared/errors', obj: @topic %>
<div class="col-md-8 pt-3">
  <%= form_with(model: @topic, local: true) do |form| %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "Enter", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>