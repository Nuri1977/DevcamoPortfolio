
<%= image_tag(@port_item.main_image) unless @port_item.main_image.nil? %>
<h2>
  <strong>Title:</strong>
  <%= @port_item.title %>
</h2>

<p>
  <strong>Body:</strong>
  <%= @port_item.body %>
</p>

<%= link_to 'Edit', edit_portfolio_path(@port_item) %> |
<%= link_to 'Back', portfolios_path %> |
<%= link_to 'Delete', portfolio_path(@port_item.id), method: :delete,
                       data: {confirm: "Are you sure to delete?"} %> 
