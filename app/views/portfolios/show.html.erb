<div class="container pt-3">
  <div class="row">

    <div class="col-md-7">
      <%= image_tag @port_item.main_image_url, width: '100%' %>
    </div>

    <div class="col-md-5">
      <h2><%= @port_item.title %></h2>
      <h5><%= @port_item.subtitle %></h5>
      <hr>
      <p><%= @port_item.body %></p>
      <hr>
      <h2>Thechnologies used: </h2>
      <% @port_item.technologies.each do |t| %>
          <%= t.name %>
      <% end %>
      <hr>
      <%= link_to 'View all portfolio items ', portfolios_path %>
    </div>

  </div>
</div>

