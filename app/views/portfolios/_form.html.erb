<%= render 'shared/errors', obj: @port_item %>

<%= form_for(obj) do |form| %>

  <div class="row">
    <div class="col-md-6">

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: "form-control" %>
      </div>
      <hr>
      <div class="form-group">
        <p>Upload <%= form.label :main_image %>: </p>
        <%= form.file_field :main_image %>
      </div>
      <hr>
      <div class="form-group mt-0">
        <p>Upload <%= form.label :thumb_image %>: </p>
        <%= form.file_field :thumb_image %>
      </div>

    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows: 15 %>
      </div>
    </div>
  
    <div class="col-md-12">
      <div class="form-group">
        <%= form.submit "Submit", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
<% end %>